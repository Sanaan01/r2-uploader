# Cloudflare R2 Configuration
# Copy this file to .env and fill in your values

# Your Cloudflare account ID (found in the R2 dashboard)
VITE_R2_ACCOUNT_ID=your_account_id

# R2 Access Key ID (create in R2 > Manage R2 API Tokens)
VITE_R2_ACCESS_KEY_ID=your_access_key_id

# R2 Secret Access Key
VITE_R2_SECRET_ACCESS_KEY=your_secret_access_key

# Your R2 bucket name
VITE_R2_BUCKET_NAME=images

# Public URL prefix for uploaded files (your custom domain or R2 public URL)
VITE_R2_PUBLIC_URL=https://assets.sanaan.dev

# Optional: Path prefix for uploads (e.g., "gallery/" or "images/")
VITE_R2_PATH_PREFIX=
